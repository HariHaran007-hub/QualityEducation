<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.whiteboard.RoomWhiteBoardFragment">

    <com.rcappstudios.qualityeducation.fragments.whiteboard.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.varunest.sparkbutton.SparkButton
        android:id="@+id/eraserButton"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/paintView"
        app:layout_constraintEnd_toStartOf="@+id/paintView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sparkbutton_activeImage="@drawable/active_erraser"
        app:sparkbutton_animationSpeed="1.5"
        app:sparkbutton_iconSize="30dp"
        app:sparkbutton_inActiveImage="@drawable/inactive_erraser"
        app:sparkbutton_primaryColor="@color/purple_500"
        app:sparkbutton_secondaryColor="@color/purple_700" />

</androidx.constraintlayout.widget.ConstraintLayout>